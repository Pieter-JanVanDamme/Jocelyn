<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Presentation.ComposeJottingActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/compose_jotting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editJottingContent" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/compose_jotting_toolbar" android:layout_marginTop="8dp"
            android:importantForAutofill="no"/>
    <android.support.design.widget.FloatingActionButton
            android:src="@android:drawable/ic_menu_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/submitJottingBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/editJottingContent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintVertical_bias="0.95" app:backgroundTint="@color/colorComplementary"/>
    <TextView
            android:text="AfterTextChanged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/after0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editJottingContent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Editable:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/after1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/after0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/afterEditable" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/after0" app:layout_constraintStart_toEndOf="@+id/after1"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="BeforeTextChanged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/before0" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/after1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Start:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/before0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Count:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/before2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="After:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/before3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/before2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beforeStart" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/before0" app:layout_constraintStart_toEndOf="@+id/textView6"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beforeCount" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/beforeStart" app:layout_constraintStart_toEndOf="@+id/before2"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beforeAfter" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/beforeCount" app:layout_constraintStart_toEndOf="@+id/before3"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="OnTextChanged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/on0" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/before3"/>
    <TextView
            android:text="Start:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/on1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/on0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Before:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/on2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/on1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Count:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/on3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/on2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onStart" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/on0" app:layout_constraintStart_toEndOf="@+id/on1"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onBefore" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/onStart" app:layout_constraintStart_toEndOf="@+id/on2"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onCount" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/onBefore" app:layout_constraintStart_toEndOf="@+id/on3"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beforeSeq" app:layout_constraintStart_toEndOf="@+id/before0"
            android:layout_marginStart="8dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/editJottingContent"/>
    <TextView
            android:text="sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/onSeq" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/beforeSeq" app:layout_constraintStart_toEndOf="@+id/on0"
            android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>