<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="@dimen/relsugg_listcont_height">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/relsugg_listcont_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingBottom="@dimen/relsugg_listcont_margin">

        <ImageView
                android:layout_height="@dimen/relsugg_listcont_height"
                android:id="@+id/suggestionPicture"
                android:layout_width="@dimen/relsugg_listcont_height" app:srcCompat="@drawable/_default"/>
        <TextView
                android:text="TextView"
                android:layout_width="@dimen/relsugg_listcont_namewidth"
                android:layout_height="@dimen/relsugg_listcont_height" android:id="@+id/suggestionName"
                android:paddingRight="@dimen/relsugg_listcont_namemargin"
                android:paddingLeft="@dimen/relsugg_listcont_namemargin"/>
        <ImageButton
                android:layout_height="@dimen/relsugg_listcont_height"
                android:id="@+id/suggestionBtn" android:layout_width="wrap_content"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>